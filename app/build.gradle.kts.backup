sentry {
    // Generates a JVM (Java, Kotlin, etc.) source bundle and uploads your source code to Sentry.
    // This enables source context, allowing you to see your source
    // code as part of your stack traces in Sentry.
    includeSourceContext = true

    org = "shray"
    projectName = "bestproductivityapp"
    authToken = System.getenv("SENTRY_AUTH_TOKEN")

    // Disable or enable the handling of Proguard mapping for Sentry.
    // If enabled the plugin will generate a UUID and will upload the mapping to Sentry.
    includeProguardMapping = true
    autoUploadProguardMapping = true

    // Configure auto-upload of release to Sentry
    autoUploadSourceContext = true

    // Enable or disable the automatic creation of releases on Sentry
    autoInstallation {
        enabled = true
        
        // Configure the variant filtering
        includeVariant { variant ->
            // Only upload on release builds
            variant.buildType.name == "release"
        }
    }
}

